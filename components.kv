ScreenManager:
    IntroScreen:
    HomeScreen:
    PlayScreen:
    SaveScreen:
    EditScreen:


############################ INTRO #######################################
<IntroScreen>:
    name: 'intro'

    Image:
        source: "static/logo.png"
        pos_hint: {'center_x':0.5, 'center_y':0.9}

    MDLabel:
        text: 'Hello,\nI am here to help you to\nmemorize something'
        halign: 'center'
        pos_hint: {'center_x':0.5, 'center_y':0.6}

    MDFillRoundFlatButton:
        text: 'Start'
        md_bg_color: 'black'
        pos_hint: {'center_x':0.5, 'center_y':0.3}
        on_press: root.manager.current = 'home'


############################ HOME #######################################
<HomeScreen>:
    name: 'home'

    MDIcon:
        icon: "home"
        halign: 'center'
        pos_hint: {'center_x':0.5, 'center_y':0.9}

    MDRectangleFlatButton:
        text: "Play"
        theme_text_color: "Custom"
        text_color: "black"
        line_color: "black"
        pos_hint: {'center_x':0.5, 'center_y':0.6}
        on_press: root.manager.current = 'play'

    MDRectangleFlatButton:
        text: "Save"
        theme_text_color: "Custom"
        text_color: "black"
        line_color: "black"
        pos_hint: {'center_x':0.5, 'center_y':0.4}
        on_press: root.manager.current = 'save'

    MDRectangleFlatButton:
        text: "Edit"
        theme_text_color: "Custom"
        text_color: "black"
        line_color: "black"
        pos_hint: {'center_x':0.5, 'center_y':0.2}
        on_press: root.manager.current = 'edit'


############################ PLAY #######################################
<PlayScreen>:
    name: 'play'

    MDIconButton:
        icon: "home"
        pos_hint: {'center_x':0.5, 'center_y':0.9}
        on_press: root.manager.current = 'home'

    MDIconButton:
        id: category_dropdown_play
        icon: "database"
        pos_hint: {'center_x':0.5, 'center_y':0.7}
        on_press: app.dropdown_play()

    MDLabel:
        id: question
        text: "Select a category\nPush the right button to start\n(left one shows the answer)"
        halign: 'center'
        pos_hint: {'center_x':0.5, 'center_y':0.5}

    MDLabel:
        id: answer
        theme_text_color: "Error"
        halign: 'center'
        pos_hint: {'center_x':0.5, 'center_y':0.4}

    MDIconButton:
        icon: "alert-circle"
        pos_hint: {'center_x':0.3, 'center_y':0.2}
        on_press: app.show()

    MDIconButton:
        icon: "arrow-up-drop-circle"
        pos_hint: {'center_x':0.7, 'center_y':0.2}
        on_press: app.play()


############################ SAVE #######################################
<SaveScreen>:
    name: 'save'

    MDIconButton:
        icon: "home"
        pos_hint: {'center_x':0.5, 'center_y':0.9}
        on_press: root.manager.current = 'home'

    MDLabel:
        text: 'Insert 2 items for category\nfor example:\nFrench -> dog -> chien'
        halign: 'center'
        pos_hint: {'center_x':0.5, 'center_y':0.8}

	MDTextField:
    	id: category
	    hint_text: "Category"
        helper_text_mode: "on_error"
	    required: True
	    icon_left: "briefcase-edit"
	    halign: 'center'
        pos_hint: {'center_x':0.5, 'center_y':0.6}
        size_hint: (0.5, None)

    MDTextField:
    	id: left_input
        helper_text_mode: "on_error"
	    hint_text: "A"
	    required: True
	    halign: 'center'
        pos_hint: {'center_x':0.5, 'center_y':0.45}
        size_hint: (0.5, None)

	MDTextField:
		id: right_input
        helper_text_mode: "on_error"
	    hint_text: "B"
	    required: True
	    halign: 'center'
        pos_hint: {'center_x':0.5, 'center_y':0.3}
        size_hint: (0.5, None)

    MDIconButton:
        id: inputxt
        icon: "content-save"
        pos_hint: {'center_x':0.5, 'center_y':0.1}
        on_press: app.save()


############################ EDIT #######################################
<EditScreen>:
    name: 'edit'

    MDIconButton:
        icon: "home"
        pos_hint: {'center_x':0.5, 'center_y':0.9}
        on_press: root.manager.current = 'home'

    MDIconButton:
        id: category_dropdown_edit
        icon: "database"
        pos_hint: {'center_x':0.3, 'center_y':0.8}
        on_press: app.dropdown_edit()

    MDIconButton:
        icon: "delete"
        pos_hint: {'center_x':0.7, 'center_y':0.8}
        on_press: app.delete()

